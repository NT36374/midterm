    <?php
    for ($i = 1; $i <= 10; $i++) {
        echo "<tr>";
        echo "<td>$i</td>";
        echo "<td>นางสาวณัฐชา</td>";
        echo "<td>เท้าสมบุญ</td>";
        echo "<td>6/10</td>";
        echo "</tr>";
    }
    ?>

